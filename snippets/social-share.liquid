{%- liquid
	assign share_url = shop.url | append: type.url
	assign share_description = type.description | strip_html | truncatewords: 15 | url_param_escape
  if type == 'article'
	  assign share_image = type.image | image_url: width: 750 | prepend: 'https: '
  else
    assign share_image = type.featured_image | image_url: width: 750 | prepend: 'https: '
  endif
  assign action = "javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;"
-%}
<div class="social-share">
  <a aria-label="Facebook" class="social-share_button-facebook button button--icon button--share button--rounded button--outline" href="https://www.facebook.com/sharer.php?u={{ share_url }}" onclick="{{ action }}">
    {%- render 'icon-facebook' -%}</a>
  <a aria-label="Twitter" class="social-share_button-twitter button button--icon button--share button--rounded button--outline" href="https://twitter.com/share?text={{ type.title }}&url={{ share_url }}" onclick="{{ action }}">
    {%- render 'icon-twitter' -%}
  </a>
  <a aria-label="Pinterest" class="social-share_button-pinterest button button--icon button--share button--rounded button--outline" href="https://pinterest.com/pin/create/button/?url={{ share_url }}&media={{ share_image }}&description={{ share_description }}" onclick="{{ action }}">
    {%- render 'icon-pinterest' -%}
  </a>
</div>

