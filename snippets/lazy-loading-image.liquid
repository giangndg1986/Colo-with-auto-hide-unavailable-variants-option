<noscript>
  {{ image_item }}
</noscript>
<sht-lazy-loading-image class="{{ lazy_image_loading_image_css }}">
  {% if replace_srcset %}
    {% if is_first == false %}
      {{ image_item | replace: "srcset=", "data-srcset=" | replace: "src=", "data-src=" | replace: "placeholder=", "src=" | replace: 'class="', 'loading="lazy" class="no-js-hidden is-not-first-element ' }} 
    {% else %}
      {{ image_item | replace: 'class="', 'class="no-js-hidden ' }}
    {% endif %}
  {% else %} 
    {{ image_item | replace: 'class="', 'loading="lazy" class="no-js-hidden ' }}
  {% endif %}

  <div class="{{ lazy_image_loading_spinner_css }}">
    <svg class="spinner" viewBox="25 25 50 50">
      <circle class="spinner__path" cx="50" cy="50" r="20" fill="none" stroke="#02020E" stroke-width="2" />
    </svg>
  </div>
</sht-lazy-loading-image>